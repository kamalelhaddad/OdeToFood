@page
@model OdeToFood.Pages_Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h2>@Model.Message</h2>
<form method="get" class="col-lg-4">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn"><button class="btn btn-default">
                 <i class="glyphicon glyphicon-search"></i></button></span>
        </div>
    </div>
</form>

<table class="table table-striped">
    @foreach (var Restaurant in Model.Restaurants) {
        <tr>
            <td>@Restaurant.Name</td>
            <td>@Restaurant.Location</td>
            <td>@Restaurant.Cuisine</td>
            <td>
                <a asp-page="./Detail" asp-route-RestaurantId="@Restaurant.Id" class="btn" ><i class="glyphicon glyphicon-zoom-in"></i></a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-RestaurantId="@Restaurant.Id" class="btn" ><i class="glyphicon glyphicon-edit"></i></a>
            </td>
        </tr>
    }
    
</table>

<a class="btn btn-primary" type="submit" asp-page=".\Edit">Add New</a>

